rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user has NYU email
    function isNYUUser() {
      return isAuthenticated() &&
             request.auth.token.email.matches('.*@nyu.edu$');
    }

    // Research entries collection
    match /research_entries/{entryId} {
      // Everyone can read (anonymous and authenticated)
      allow read: if true;

      // Only NYU users can write, update, delete
      allow create, update, delete: if isNYUUser();
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // NYU users can read all user profiles
      allow read: if isNYUUser();

      // Users can create/update their own profile
      allow create, update: if isAuthenticated() && request.auth.uid == userId;

      // Only the user themselves can delete their profile
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // Chat history collection
    match /chat_history/{chatId} {
      // Users can only read their own chat history
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Users can create their own chat history
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Users can update their own chat history
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Users can delete their own chat history
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // Team members collection (for tracking contributions)
    match /team_members/{memberId} {
      // Everyone can read
      allow read: if true;

      // Only NYU users can write
      allow create, update, delete: if isNYUUser();
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
